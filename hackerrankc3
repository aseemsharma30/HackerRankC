#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int a,b,sum,diff;
    float c,d,su,dif;
    scanf("%d %d",&a,&b);
    scanf("%f %f",&c,&d);
    sum=a+b;
    diff=a-b;
    printf("%d %d\n", sum, diff);
    su=c+d;
    dif=c-d;
    printf("%.1f %.1f", su, dif);
    
    return 0;
}

